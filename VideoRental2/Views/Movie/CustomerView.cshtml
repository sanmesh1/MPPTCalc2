@model List<VideoRental2.Models.Customer>
@{
    ViewBag.Title = "CustomerView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerView</h2>
@if (Model.Count() == 0)
{
    <p>"No on has rented this movie"</p>
}
else
{
    <table class=“table table-­‐bordered table-­‐hover”>
        <thead>
            <tr>
                <th>Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                @*@<li>@Html.ActionLink(customer.name, Index, Home, new { id = customer.id }, null)</li>*@
                <tr>
                    <td>@Html.ActionLink(customer.name, "Details", "Movie", new { id = customer.id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
